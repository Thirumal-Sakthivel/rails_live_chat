<div class="row page-content">
  <div class="col col-lg-12 col-md-12 col-sm-12">
    <h6>Message to <strong><%= @user.full_name %></strong></h6>
    <div class="row">
      <div class="col col-sm-4 col-md-4">
        <div class="card">
          <div class="card-block">
            <%= render '/messages/form', message: @message %>
          </div>
        </div>
      </div>
      <div class="col col-sm-8 col-md-8">
        <div class="card">
          <div class="card-block">
            <div class="messages_body">
              <% if @messages.any? %>
                  <%= render @messages %>
              <% else %>
                <p class="no_message_text text-center">No Message found!</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>