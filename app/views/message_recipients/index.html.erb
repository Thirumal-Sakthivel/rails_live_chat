<p id="notice"><%= notice %></p>

<h1>Message Recipients</h1>

<table>
  <thead>
    <tr>
      <th>Recipient</th>
      <th>Message</th>
      <th>Recipient group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @message_recipients.each do |message_recipient| %>
      <tr>
        <td><%= message_recipient.recipient_id %></td>
        <td><%= message_recipient.message_id %></td>
        <td><%= message_recipient.recipient_group_id %></td>
        <td><%= link_to 'Show', message_recipient %></td>
        <td><%= link_to 'Edit', edit_message_recipient_path(message_recipient) %></td>
        <td><%= link_to 'Destroy', message_recipient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

